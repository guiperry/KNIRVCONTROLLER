# KNIRV Controller Production Environment Variables
VITE_APP_ENV=production
VITE_APP_NAME=KNIRV Controller
VITE_APP_VERSION=1.0.0

# Network Configuration - Production Values
VITE_KNIRV_NETWORK_TYPE=public-network
VITE_KNIRV_RPC_URL=https://rpc.knirv.com
VITE_KNIRV_REST_URL=https://api.knirv.com
VITE_KNIRV_WS_URL=wss://ws.knirv.com/websocket

# KNIRV Chain Configuration
VITE_KNIRV_CHAIN_ID=knirv-mainnet
VITE_KNIRV_DENOM=uknirv
VITE_KNIRV_FEE_DENOM=uknirv

# XION Wallet Integration
VITE_XION_WALLET_ENABLED=true
VITE_XION_NETWORK=mainnet

# Database Configuration - Use Production Keys
VITE_DATABASE_NAME=knirv-controller-prod
VITE_DATABASE_ENCRYPTION_KEY=${DATABASE_ENCRYPTION_KEY}

# API Keys - Use Environment Variables
VITE_OPENAI_API_KEY=${OPENAI_API_KEY}
VITE_ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}

# Feature Flags - Production Optimized
VITE_ENABLE_VOICE_CONTROL=true
VITE_ENABLE_AI_AGENTS=true
VITE_ENABLE_GRAPH_VISUALIZATION=true
VITE_ENABLE_NETWORK_MONITORING=true

# Wallet Integration
VITE_WALLET_CONNECT_PROJECT_ID=${WALLET_CONNECT_PROJECT_ID}
VITE_INFURA_ID=${INFURA_ID}

# Production Logging
VITE_LOG_LEVEL=warn
VITE_ENABLE_ANALYTICS=true

# Sentry Error Monitoring
VITE_SENTRY_DSN=${SENTRY_DSN}
VITE_SENTRY_ENV=production

# CDN Configuration
VITE_CDN_URL=https://cdn.knirv.com
VITE_ASSETS_URL=${VITE_CDN_URL}/assets

# Analytics
VITE_ANALYTICS_ID=${ANALYTICS_ID}
VITE_GTM_ID=${GTM_ID}

# Security
VITE_ENABLE_HTTPS_REDIRECT=true
VITE_CSP_ENABLED=true

# Performance
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_LAZY_LOADING=true

# Build Configuration
BUNDLE_ANALYZE=false

# Mobile App Configuration
VITE_APP_STORE_URL=https://apps.apple.com/app/knirv-controller
VITE_PLAY_STORE_URL=https://play.google.com/store/apps/knirv-controller
