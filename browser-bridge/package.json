{
  "name": "knirvwallet",
  "version": "1.16.5",
  "description": "KNIRVWALLET - Unified Wallet for the KNIRV Ecosystem",
  "license": "KNIRVWALLET License",
  "private": true,
  "scripts": {
    "setup": "yarn install && yarn allow-scripts",
    "develop": "yarn workspace knirvwallet-extension build:dev",
    "build": "yarn build:module && yarn build:service",
    "build:module": "yarn workspaces foreach -ptR --from '{knirvwallet-module,knirvwallet-torus-signin}' run build",
    "build:service": "yarn workspace knirvwallet-extension build",
    "build:sdk": "cd ../../KNIRVSDK/ts/unified && npx tsc",
    "version:qa": "sh scripts/update-build-version.sh",
    "version:package": "sh scripts/update-package-version.sh",
    "tag": "sh scripts/create-tag.sh",
    "test": "jest --passWithNoTests"
  },
  "resolutions": {
    "@storybook/react-docgen-typescript-plugin": "npm:react-docgen-typescript-plugin@1.0.5",
    "ws": "8.18.0"
  },
  "devDependencies": {
    "@babel/core": "7.23.9",
    "@babel/runtime": "7.23.9",
    "@lavamoat/allow-scripts": "3.0.3",
    "@lavamoat/preinstall-always-fail": "2.0.0",
    "@yarnpkg/sdks": "3.1.0",
    "babel-loader": "9.1.3",
    "eslint": "8.56.0",
    "file-loader": "6.2.0",
    "husky": "9.0.11",
    "jest": "29.7.0",
    "lint-staged": "15.4.3",
    "prettier": "3.2.5",
    "tsconfig-paths-webpack-plugin": "4.1.0",
    "typescript": "4.9.5"
  },
  "workspaces": [
    "packages/*",
    "../../KNIRVSDK/ts/unified"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "lavamoat": {
    "allowScripts": {
      "@lavamoat/preinstall-always-fail": false,
      "@storybook/react>@storybook/docs-tools>@storybook/core-common>esbuild": false
    }
  },
  "dependencies": {
    "@cosmjs/amino": "^0.34.0",
    "@cosmjs/crypto": "^0.34.0",
    "@cosmjs/encoding": "^0.34.0",
    "@cosmjs/proto-signing": "^0.34.0",
    "@cosmjs/stargate": "^0.34.0",
    "@ledgerhq/hw-transport": "^6.31.8",
    "@ledgerhq/hw-transport-mocker": "^6.29.8",
    "@ledgerhq/hw-transport-webhid": "^6.30.4",
    "@ledgerhq/hw-transport-webusb": "^6.29.8",
    "@noble/curves": "^1.9.6",
    "@noble/hashes": "^1.8.0",
    "@noble/secp256k1": "^2.3.0",
    "@zondax/ledger-cosmos-js": "^4.0.1",
    "@zondax/ledger-js": "^1.3.0",
    "bech32": "^2.0.0",
    "libsodium-sumo": "^0.7.15",
    "libsodium-wrappers-sumo": "^0.7.15",
    "rxjs": "^7.8.2",
    "secp256k1": "^5.0.1"
  }
}
